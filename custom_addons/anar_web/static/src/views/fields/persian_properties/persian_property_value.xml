<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-inherit="web.PropertyValue" t-inherit-mode="extension">

        <xpath expr="//DateTimePicker" position="replace">
            <PersianDateTimePicker
                    inputId="props.id"
                    date="propertyValue"
                    onDateTimeChanged.bind="onValueChange"
            />
        </xpath>

        <xpath expr="//DatePicker" position="replace">
            <PersianDatePicker
                    inputId="props.id"
                    date="propertyValue"
                    onDateTimeChanged.bind="onValueChange"
            />
        </xpath>

    </t>

</templates>
